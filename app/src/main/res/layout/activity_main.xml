<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/tvCurrentVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前版本:" />

    <Button
        android:id="@+id/btnShowToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/showToast" />

    <Button
        android:id="@+id/btnLoadPatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadPatch"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnLoadLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadLibrary"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDownloadPatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userDownload"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnPatchDownloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userPatch"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnCheckUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkUpgrade" />

    <Button
        android:id="@+id/btnKillSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出程序" />

</LinearLayout>